<div>

    <nav>
        <a href='/'>Home</a>
        <a href='/dashboard'>Dashboard</a>
        {{#if logged_in}}
        <a href='/'>Logout</a>
        {{/if}}
        {{#unless logged_in}}
        <a href="/login">Login</a>
        {{/unless}}
    </nav>
    
    <h1>Edit Post</h1>
    <form id="edit-form">
        <input type="hidden" id="postId" value={{post.id}}>
        <h4>Title:</h4>
        <input type="text" id="title-edit-post" value="{{post.title}}">
        <h4>Body:</h4>
        <input type="text" id="body-edit-post" value="{{post.body}}">
        <button type="submit">Submit</button>
        </form>

        <button id="delete-btn" type="submit">Delete Post</button>
</div>
<script src="/js/edit.js"></script>