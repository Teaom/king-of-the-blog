<div>
    <h2>{{post.title}}</h2>
    <h3>{{post.body}}</h3>
{{#if post.Comments}}
{{#each post.Comments}}
{{body}}
{{user.username}}
{{/each}}
{{/if}}

<form id="comment-form">
    <h3>Make a Comment</h3>
    <h4>Body:</h4>
    <input type="text" id="body-comment">
    <input type="hidden" id="postId" value={{post.id}}>
    <button type="submit">Submit</button>
</form>
</div>
<script src="/js/comment.js"></script>